<h1>Invitations</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>E-mail</th>
      <th>Stuff</th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |invitation|}}
      <tr>
        <th>{{invitation.id}}</th>
        <td>{{invitation.email}}</td>
        <td class="panel-footer text-right">
            <button class="btn btn-danger btn-xs" {{action 'deleteInvitation' invitation}}>Delete</button>
        </td>
      </tr>
    {{/each}}

  </tbody>
</table>
